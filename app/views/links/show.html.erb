<div class="row">
	<div class="col-sm-12">

		<div class="page-header">
			<%= link_to '<i class="fa fa-chevron-left"></i> Volver'.html_safe, links_path, class: "btn btn-default pull-right" %>
			<h1><%= @link.name %></h1>	
		</div>

		<%= form_tag add_tag_link_path do |f| %>
			<div class="col-sm-2 input-group input-group-sm pull-right">				  
			  <input type="text" class="form-control" id="new_tag" name="new_tag" placeholder="Nuevo tag">
			  <span class="input-group-addon input-sm"><i class="fa fa-plus"></i></span>
			</div>
		<% end %>

		<div class="link-tags">
			<% @link.tag_list.each do |t| %>
				<span class="tag-with-action">
					<%= link_to t, links_path(tag: t), class: "label label-info tag-label tag-name" %>
					<%= link_to "x", remove_tag_link_path(@link, tag: t), "data-method" => :post, class: "label label-primary tag-label tag-action" %>
				</span>
			<% end %>
		</div>		
		
	</div>
</div>

<script type="text/javascript">
	var tags = [];

	<% @tags.each do |tag| %>
		tags.push("<%= tag %>");
	<% end %>

	$("#new_tag").autocomplete({
    source: tags
  });
</script>